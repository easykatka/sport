{
	"name": "sport-app",
	"version": "0.0.1",
	"description": "Веб-приложение для организации спортивных мероприятий",
	"author": "Evgeny Ovsyannikov",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "npm run build:next && npm run build:nest",
		"build:next": "next build",
		"build:nest": "nest build --path ./tsconfig.server.json",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "node dist/server/main.js",
		"start:next": "next dev",
		"start:dev": "cross-env NODE_ENV=development nest build --webpack --webpackPath webpack-hmr.config.js --watch --path tsconfig.server.json",
		"start:debug": "nest start --path ./tsconfig.server.json --debug --watch",
		"lint": "eslint \"{src,apps,libs,test}/**/*.tsx?\" --fix"
	},
	"dependencies": {
		"@hookform/resolvers": "^2.8.8",
		"@material-ui/core": "^4.12.3",
		"@material-ui/icons": "^4.11.2",
		"@nestjs/common": "^8.0.0",
		"@nestjs/config": "^1.2.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.2.1",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/sequelize": "^8.0.0",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/swagger": "^5.2.0",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"cross-env": "^7.0.3",
		"date-fns": "^2.28.0",
		"install": "^0.13.0",
		"nest-next": "^9.6.0",
		"next": "^11.0.1",
		"npm": "^8.5.0",
		"passport": "^0.5.2",
		"passport-jwt": "^4.0.0",
		"pg": "^8.7.3",
		"pg-hstore": "^2.3.4",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-hook-form": "^7.27.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"sass": "^1.49.9",
		"sequelize": "^6.16.1",
		"sequelize-typescript": "^2.1.2",
		"sharp": "^0.30.1",
		"swagger-ui-express": "^4.3.0",
		"telegraf": "^4.7.0",
		"yup": "^0.32.11"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@types/app-root-path": "^1.2.4",
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.13",
		"@types/jest": "27.0.2",
		"@types/node": "^16.0.0",
		"@types/passport-jwt": "^3.0.6",
		"@types/react": "^17.0.39",
		"@types/react-dom": "^17.0.11",
		"@types/sequelize": "^4.28.11",
		"@types/sharp": "^0.29.5",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.14.0",
		"@typescript-eslint/parser": "^5.14.0",
		"eslint": "^8.11.0",
		"eslint-config-next": "^12.1.0",
		"jest": "^27.2.5",
		"prettier": "^2.3.2",
		"run-script-webpack-plugin": "^0.0.11",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5",
		"webpack": "^5.70.0",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
