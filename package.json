{
    "name": "sport-app",
    "version": "0.0.1",
    "description": "Веб-приложение для организации спортивных мероприятий",
    "author": "Evgeny Ovsyannikov",
    "private": true,
    "license": "MIT",
    "scripts": {
        "build": "npm run build:next && npm run build:nest",
        "build:next": "next build",
        "build:nest": "nest build --path ./tsconfig.server.json",
        "format": "prettier --write \"**/*.ts\" \"test/**/*.ts\"",
        "start": "cross-env NODE_ENV=production node dist/server/main.js",
        "start:dev": "cross-env NODE_ENV=development nest build --webpack --webpackPath webpack-hmr.config.js --watch --path tsconfig.server.json",
        "start:prod": "cross-env NODE_ENV=production nest build --path tsconfig.server.json"
    },
    "dependencies": {
        "@emotion/react": "^11.9.0",
        "@emotion/styled": "^11.8.1",
        "@hookform/resolvers": "^2.8.8",
        "@mui/icons-material": "^5.6.0",
        "@mui/material": "^5.6.0",
        "@mui/styles": "^5.6.0",
        "@mui/system": "^5.6.0",
        "@nestjs/common": "^8.4.3",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^8.4.3",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.4.3",
        "@nestjs/sequelize": "^8.0.0",
        "@nestjs/serve-static": "^2.2.2",
        "@nestjs/swagger": "^5.2.1",
        "axios": "^0.26.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cross-env": "^7.0.3",
        "date-fns": "^2.28.0",
        "install": "^0.13.0",
        "macro-css": "^1.0.5",
        "nest-next": "^9.6.0",
        "next": "^11.0.1",
        "nookies": "^2.5.2",
        "npm": "^8.6.0",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "pg": "^8.7.3",
        "pg-hstore": "^2.3.4",
        "react": "^17.0.2",
        "react-dom": "^18.0.0",
        "react-hook-form": "^7.29.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.5",
        "sass": "^1.49.11",
        "sequelize": "^6.18.0",
        "sequelize-typescript": "^2.1.3",
        "sharp": "^0.30.3",
        "swagger-ui-express": "^4.3.0",
        "telegraf": "^4.7.0",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.2.4",
        "@nestjs/schematics": "^8.0.9",
        "@nestjs/testing": "^8.4.3",
        "@types/app-root-path": "^1.2.4",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.13",
        "@types/jest": "27.4.1",
        "@types/node": "^17.0.23",
        "@types/passport-jwt": "^3.0.6",
        "@types/react": "^17.0.43",
        "@types/react-dom": "^17.0.14",
        "@types/sequelize": "^4.28.11",
        "@types/sharp": "^0.30.1",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "eslint": "^8.12.0",
        "eslint-config-next": "^12.1.4",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "run-script-webpack-plugin": "^0.0.11",
        "source-map-support": "^0.5.21",
        "supertest": "^6.2.2",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.14.1",
        "typescript": "^4.6.3",
        "webpack": "^5.71.0",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
